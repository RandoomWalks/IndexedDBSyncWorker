{
  "compilerOptions": {
    "target": "es6",
    "module": "ESNext",
    "lib": ["es2017", "dom"],
    "outDir": "./dist",
    "moduleResolution": "node",
    "strict": true,
    "noEmitOnError": true,
    "esModuleInterop": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./src/dbWorker.ts"  // Exclude Web Worker file from main compilation
  ]
}
  